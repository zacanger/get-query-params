{
  "name": "ts-library-boilerplate",
  "description": "TypeScript boilerplate for web and Node libraries.",
  "version": "1.0.15",
  "private": true,
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s -s build:clean build:rollup",
    "build:clean": "rm -rf lib && mkdir -p lib",
    "build:rollup": "rollup -c",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "cover:coveralls": "if [ -n \"$COVERALLS_REPO_TOKEN\" ] ; then coveralls < coverage/lcov.info ; fi || true",
    "format": "prettier --write *.js \"src/*.ts\"",
    "postbuild": "tsc --emitDeclarationOnly 2>&1 >/dev/null || true",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "test": "run-s -s test:lint test:jest",
    "test:build": "run-s -s test:lint cover cover:coveralls",
    "test:jest": "jest",
    "test:lint": "eslint --ext .ts,.js -c .eslintrc.json src"
  },
  "homepage": "https://github.com/zacanger/ts-library-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-library-boilerplate.git"
  },
  "bugs": "https://github.com/zacanger/ts-library-boilerplate/issues",
  "keywords": [
    "boilerplate"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@types/jest": "24.9.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babelrc-rollup": "3.0.0",
    "coveralls": "3.0.9",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "0.0.3",
    "husky": "4.0.10",
    "jest": "24.9.0",
    "lint-staged": "10.0.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rollup": "1.29.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-uglify": "6.0.4",
    "rollup-watch": "4.3.1",
    "sortpack": "2.0.4",
    "tap-spec": "5.0.0",
    "typescript": "3.7.5",
    "uglify-es": "3.3.10"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|dist|node_modules)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
